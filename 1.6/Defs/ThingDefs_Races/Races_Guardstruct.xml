<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="ABF_Thing_Synstruct_AnimalBase">
		<defName>ABF_Thing_Synstruct_Guardstruct</defName>
		<label>guardstruct</label>
		<description>These drone synstructs are unique in many ways - programmable for a wide range of tasks both military and civilian in nature, heavily armed and yet disarmingly affectionate, charge-capable and command-responsive - and are thus a well known line of biomimetic. Many serve as companions, fearsome scouts, mobile surveillance, sappers, or for the more adventurous and mobility minded: even as mounts.\n\nTheir lethality and violent capabilities have certainly earned them a reputation - a reputation they almost seem keen to keep.</description>
		<statBases>
			<MarketValue>700</MarketValue>
			<MoveSpeed>6.5</MoveSpeed>
			<ArmorRating_Sharp>0.45</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.2</ArmorRating_Blunt>
            <ABF_Stat_Synstruct_MaxEnergy>2000</ABF_Stat_Synstruct_MaxEnergy>
            <ABF_Stat_Synstruct_EnergyConsumption>200</ABF_Stat_Synstruct_EnergyConsumption>
            <CaravanRidingSpeedFactor>1.6</CaravanRidingSpeedFactor>
            <Mass>80</Mass>
		</statBases>
		<tools>
			<li>
				<label>left claw</label>
				<capacities>
					<li>Scratch</li>
				</capacities>
				<power>18</power>
				<cooldownTime>1.5</cooldownTime>
				<linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>18</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
				<label>right claw</label>
				<capacities>
					<li>Scratch</li>
				</capacities>
				<power>18</power>
				<cooldownTime>1.5</cooldownTime>
				<linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>18</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
                <label>shreddermaw</label>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>20</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
                <chanceFactor>0.9</chanceFactor>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>20</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>8</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<chanceFactor>0.2</chanceFactor>
			</li>
		</tools>
		<race>
			<body>ABF_Body_Synstruct_QuadrupedalBiomimetic</body>
			<packAnimal>true</packAnimal>
			<baseBodySize>1.0</baseBodySize>
			<baseHealthScale>1.4</baseHealthScale>
			<nameOnTameChance>1</nameOnTameChance>
			<leatherDef>Leather_Patch</leatherDef>
			<trainability>Advanced</trainability>
			<nuzzleMtbHours>12</nuzzleMtbHours>
			<lifeStageAges>
				<li>
					<def>ABF_LifeStage_Artificial_AnimalComplete</def>
					<minAge>0.0</minAge>
					<soundWounded>Pawn_Warg_Wounded</soundWounded>
					<soundDeath>Pawn_Warg_Death</soundDeath>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
		</race>
        <recipes>
            <li>ABF_Recipe_Synstruct_InjectCoolant</li>
            <li>ABF_Recipe_Synstruct_InjectLubricant</li>
        </recipes>
		<butcherProducts>
			<Steel>20</Steel>
			<Plasteel>10</Plasteel>
			<ComponentIndustrial>2</ComponentIndustrial>
		</butcherProducts>
		<modExtensions>
            <li Class="ArtificialBeings.ABF_ArtificialPawnExtension">
                <blacklistedNeeds>
                    <li MayRequire="Dubwise.DubsBadHygiene">Hygiene</li>
                    <li MayRequire="Dubwise.DubsBadHygiene">Bladder</li>
                    <li MayRequire="Dubwise.DubsBadHygiene">DBHThirst</li>
                </blacklistedNeeds>
                <artificialNeeds>
                    <li>
                        <key>ABF_Need_Synstruct_Coolant</key>
                        <value>
                            <maximumCapacity>6</maximumCapacity>
                            <fallRatePerDay>0.05</fallRatePerDay>
                            <fallRateIsPercentage>false</fallRateIsPercentage>
                        </value>
                    </li>
                    <li>
                        <key>ABF_Need_Synstruct_Lubricant</key>
                        <value>
                            <maximumCapacity>6</maximumCapacity>
                            <fallRatePerDay>0.15</fallRatePerDay>
                            <fallRateIsPercentage>false</fallRateIsPercentage>
                        </value>
                    </li>
                    <li><key>ABF_Need_Synstruct_Energy</key><value></value></li>
                </artificialNeeds>
                <medicineList>
                    <li>ABF_Thing_Synstruct_RepairStimMinor</li>
                    <li>ABF_Thing_Synstruct_RepairStim</li>
                    <li>ABF_Thing_Synstruct_RepairStimUltra</li>
                </medicineList>
                <onlyUseRaceRestrictedMedicine>true</onlyUseRaceRestrictedMedicine>
                <hediffReplacements>
                    <BloodRot MayRequire="Ludeon.RimWorld.Royalty">ABF_Hediff_Synstruct_CoreLockout</BloodRot>
                    <Abasia MayRequire="Ludeon.RimWorld.Royalty">ABF_Hediff_Synstruct_CoreLockout</Abasia>
                </hediffReplacements>
            </li>
            <li Class="ArtificialBeings.ABF_SynstructExtension">
            </li>
		</modExtensions>
	</ThingDef>

	<PawnKindDef ParentName="ABF_PawnKind_Synstruct_AnimalBase">
