<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="ABF_Thing_Synstruct_AnimalBase">
        <defName>ABF_Thing_Synstruct_Steelstruct</defName>
        <label>steelstruct</label>
        <description>These drones are ubiquitous in synstruct societies on life-bearing worlds thanks to their specialized machinery capable of extracting minerals from organic material in order to refine and forge into steel. Their ravenous consumption of said organic matter has led to planet-wide bans in many systems - and to many worlds being turned near lifeless by roaming synstruct "pastoralists" who take "herds" of these creatures from planet to planet.</description>
        <statBases>
            <MoveSpeed>2.00</MoveSpeed>
            <MarketValue>600</MarketValue>
            <ABF_Stat_Synstruct_ChargingSpeed>0</ABF_Stat_Synstruct_ChargingSpeed>
        </statBases>
        <tools>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>8</power>
                <cooldownTime>1.65</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
            </li>
        </tools>
        <comps>
            <li Class="CompProperties_Shearable">
                <woolDef>Steel</woolDef>
                <shearIntervalDays>10</shearIntervalDays>
                <woolAmount>150</woolAmount>
            </li>
        </comps>
        <race>
            <body>ABF_Body_Synstruct_QuadrupedalBiomimetic</body>
            <packAnimal>true</packAnimal>
            <baseBodySize>1</baseBodySize>
            <baseHealthScale>1</baseHealthScale>
            <baseHungerRate>3</baseHungerRate>
            <foodType>OmnivoreRoughAnimal</foodType>
            <nameOnTameChance>1</nameOnTameChance>
            <lifeStageAges>
                <li>
                    <def>ABF_LifeStage_Artificial_AnimalComplete</def>
                    <minAge>0.0</minAge>
                    <soundWounded>Pawn_Muffalo_Wounded</soundWounded>
                    <soundDeath>Pawn_Muffalo_Death</soundDeath>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
            <ageGenerationCurve>
                <points>
                    <li>(0,0)</li>
                    <li>(1,100)</li>
                    <li>(2,0)</li>
                </points>
            </ageGenerationCurve>
        </race>
        <recipes>
            <li>ABF_Recipe_Synstruct_InjectCoolant</li>
        </recipes>
		<butcherProducts>
			<Steel>50</Steel>
			<Plasteel>10</Plasteel>
			<ComponentIndustrial>3</ComponentIndustrial>
		</butcherProducts>
		<modExtensions>
            <li Class="ArtificialBeings.ABF_ArtificialPawnExtension">
                <blacklistedNeeds>
                    <li MayRequire="Dubwise.DubsBadHygiene">Hygiene</li>
                    <li MayRequire="Dubwise.DubsBadHygiene">Bladder</li>
                    <li MayRequire="Dubwise.DubsBadHygiene">DBHThirst</li>
                </blacklistedNeeds>
                <artificialNeeds>
                    <li><key>ABF_Need_Synstruct_Coolant</key><value>2</value></li>
                </artificialNeeds>
                <medicineList>
                    <li>ABF_Thing_Synstruct_RepairStimMinor</li>
                    <li>ABF_Thing_Synstruct_RepairStim</li>
                    <li>ABF_Thing_Synstruct_RepairStimUltra</li>
                </medicineList>
                <onlyUseRaceRestrictedMedicine>true</onlyUseRaceRestrictedMedicine>
                <hediffReplacements>
                    <li MayRequire="Ludeon.RimWorld.Royalty"><key>BloodRot</key><value>ABF_Hediff_Synstruct_CoreLockout</value></li>
                    <li MayRequire="Ludeon.RimWorld.Royalty"><key>Abasia</key><value>ABF_Hediff_Synstruct_CoreLockout</value></li>
                </hediffReplacements>
            </li>
		</modExtensions>
    </ThingDef>

    <PawnKindDef ParentName="ABF_PawnKind_Synstruct_AnimalBase">
        <defName>ABF_PawnKind_Synstruct_Steelstruct_Newboot</defName>
        <label>steelstruct</label>
        <race>ABF_Thing_Synstruct_Steelstruct</race>
        <combatPower>20</combatPower>
        <canArriveManhunter>false</canArriveManhunter>
		<ecoSystemWeight>0.5</ecoSystemWeight>
	    <defaultFactionType>PlayerColony</defaultFactionType>
        <lifeStages>
            <li>
                <bodyGraphicData>
                    <texPath>Things/Pawns/Animals/Steelstruct/Steelstruct</texPath>
                    <drawSize>2</drawSize>
                    <shadowData>
                        <volume>(0.8, 0.6, 0.6)</volume>
                        <offset>(0,0,-0.3)</offset>
                    </shadowData>
                </bodyGraphicData>
                <dessicatedBodyGraphicData>
                    <texPath>Things/Pawns/Animals/Steelstruct/Steelstruct</texPath>
                    <drawSize>2</drawSize>
                </dessicatedBodyGraphicData>
            </li>
        </lifeStages>
    </PawnKindDef>

</Defs>
